<p id="notice"><%= notice %></p>

<h1>Listing Competition Types</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @competition_types.each do |competition_type| %>
      <tr>
        <td><%= competition_type.description %></td>
        <td><%= link_to 'Show', competition_type %></td>
        <td><%= link_to 'Edit', edit_competition_type_path(competition_type) %></td>
        <td><%= link_to 'Destroy', competition_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

