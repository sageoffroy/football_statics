<p id="notice"><%= notice %></p>

<h1>Listing Player Of Team Matches</h1>

<table>
  <thead>
    <tr>
      <th>Player of team</th>
      <th>Match</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_of_team_matches.each do |player_of_team_match| %>
      <tr>
        <td><%= player_of_team_match.player_of_team %></td>
        <td><%= player_of_team_match.match %></td>
        <td><%= link_to 'Show', player_of_team_match %></td>
        <td><%= link_to 'Edit', edit_player_of_team_match_path(player_of_team_match) %></td>
        <td><%= link_to 'Destroy', player_of_team_match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

